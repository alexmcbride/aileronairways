@model Echelon.TimelineApi.TimelineEvent
@{
    ViewData["Title"] = "Event Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <h2>Event Detail</h2>

        @Html.ActionLink("Back to timeline", "Index", new { id = @ViewBag.timelineId })

        <h3>@Model.Title</h3>
        <p>Date: @Model.EventDateTime</p>
        <p>Location: @Model.Location</p>
        <p>Description: @Model.Description</p>

        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { onclick = "return confirm('Are you sure you wish to delete this event?');" })
    </div>
</div>
