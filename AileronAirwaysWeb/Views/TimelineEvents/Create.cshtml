@model AileronAirwaysWeb.ViewModels.TimelineEventViewModel

<div id="modal-container">
    <form asp-antiforgery="true" id="create-event-form">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" style="color:#3A87AD">
                Create New Event
            </h4>
        </div>

        <div class="modal-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <p>Create a new event on the timeline.</p>

            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EventDateTime"></label>
                <div class='input-group date' id='eventDateTime'>
                    <input asp-for="EventDateTime" type='text' class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                <span asp-validation-for="EventDateTime" class="text-danger"></span>
            </div>
        </div>

        <div class="modal-footer">
            <div class="btn-group">
                <button type="submit" class="btn btn-primary" id="btnSave">Create Event</button>
                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li><a href="#" id="createAndEditButton">Create and Edit Event</a></li>
                </ul>
            </div>
        </div>
    </form>
</div>

<script>
    $(function () {
        $('#eventDateTime').datetimepicker({
            format: 'DD/MM/YYYY HH:mm:ss'
        });
    });
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}