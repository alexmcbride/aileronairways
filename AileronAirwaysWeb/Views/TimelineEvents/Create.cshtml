q@model Echelon.TimelineApi.TimelineEvent

@{
    ViewData["Title"] = "Create Event";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Event</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h4>Create a new event for this timeline.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EventDateTime"></label>
                <input asp-for="EventDateTime" class="form-control"  />

                <span asp-validation-for="EventDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-default">Create New Event</button> 
            | 
            <a asp-action="Index" asp-route-id="@ViewBag.TimelineId">Go back</a>
        </form>
    </div>
</div>
