@model AileronAirwaysWeb.ViewModels.TimelineEventViewModel

<form asp-antiforgery="true" id="edit-location-form" class="form-horizontal col-sm-offset-2">
    <input type="hidden" id="locationaddress" asp-for="Location" />

    <span asp-validation-for="Location" class="text-danger"></span>

    <div class="row">
        <div class="col-sm-4">
            <label class="control-label" for="curlng">Latitude</label>
        </div>
        <div class="col-sm-4">
            <label class="control-label" for="curlat">Longitude</label>
        </div>
        <div class="col-sm-2">
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <input type="text" name="longitude" id="curlng" class="form-control">
        </div>
        <div class="col-sm-4">
            <input type="text" name="longitude" id="curlat" class="form-control">
        </div>
        <div class="col-sm-2">
            <button type="submit" id="btnSave" class="btn btn-default"><i class="far fa-edit" aria-hidden="true"></i> Save</button>
        </div>
    </div>
</form>