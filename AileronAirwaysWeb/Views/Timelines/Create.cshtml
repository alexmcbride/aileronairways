@model Echelon.TimelineApi.Timeline

<div>

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <div class="modal-title" id="myModalLabel" style="color:#3A87AD">
            <h2>Create Timeline</h2>
        </div>
    </div>

    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                @using (Html.BeginForm("Create", "TimelineEvents", FormMethod.Post))
                {
                    <h4>Enter a Timeline Title.</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="modal-footer">
                        <div class="form-group">
                            <button type="submit" id="btnSave" class="btn btn-default">Create New Timeline</button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            @*<input type="submit" value="Create Timeline" class="btn btn-default" />*@
                        </div>
                        <div>
                            <a asp-action="Index">Back to List</a>
                        </div>
                    </div>
                }
            </div>
        </div>


    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
