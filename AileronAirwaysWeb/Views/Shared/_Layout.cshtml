<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Aileron Airways</title>

    <link href="~/lib/fontAwesome/web-fonts-with-css/css/fontawesome-all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-datepicker/bootstrap-datetimepicker.min.css">
    
    <link rel="stylesheet" href="~/css/site.css" />

    <link href="~/css/timeline.css" rel="stylesheet" />

    @if (IsSectionDefined("AddToHead"))
    {
        @RenderSection("AddToHead", required: false)
    }

</head>
<body>
    <nav class="navbar navbar-fixed-top mt-navbar-custom">
        <div class="">
            <div class="navbar-header">
                <a asp-area="" asp-controller="Timelines" asp-action="Index" class="navbar-brand">Aileron Airways</a>
            </div>
        </div>
    </nav>

    @*Use tag helper to display flash messages.*@
    <div id="flash-messages-wrapper">
        <flash-messages />
    </div>

    <div style="flex: 1 0 auto;">
        @*class="container body-content"*@
        @RenderBody()

    </div>
    <footer class="small text-center text-muted">
        <p>&copy; @DateTime.Now.Year - Aileron Airways</p>
    </footer>


    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/moment.min.js"></script> <!-- Needed for Bootstrap DatePicker -->
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/lib/bootstrap-datepicker/bootstrap-datetimepicker.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script defer src="https://use.fontawesome.com/releases/v5.0.8/js/solid.js" integrity="sha384-+Ga2s7YBbhOD6nie0DzrZpJes+b2K1xkpKxTFFcx59QmVPaSA8c7pycsNaFwUK6l" crossorigin="anonymous"></script>
        <script defer src="https://use.fontawesome.com/releases/v5.0.8/js/fontawesome.js" integrity="sha384-7ox8Q2yzO/uWircfojVuCQOZl+ZZBg2D2J5nkpLqzH1HY0C1dHlTKIbpRz/LG23c" crossorigin="anonymous"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/moment.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/lib/bootstrap-datepicker/bootstrap-datetimepicker.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
